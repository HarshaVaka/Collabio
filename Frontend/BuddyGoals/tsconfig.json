{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    // ✅ Required for Vercel + React Router + .mts/.cts types
    "moduleResolution": "bundler",

    // ✅ Required for react-hook-form, goober, many libs
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // ✅ Prevent TS from checking node_modules types
    "skipLibCheck": true,

    "useDefineForClassFields": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    // ✅ Your existing alias support
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    // ✅ Needed when using moduleResolution=bundler
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src"]
}
